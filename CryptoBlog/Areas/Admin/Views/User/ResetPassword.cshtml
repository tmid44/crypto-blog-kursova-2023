@model CryptoBlog.ViewModels.ResetPasswordVM

@{
    ViewData["Title"] = "Скинути пароль";
}

<div class="container-fluid">
    <a class="btn btn-primary mb-1" asp-action="Index" asp-controller="User">Повернутись</a>
    <div class="card">
        <div class="card-header bg-info">
            <h4 class="card-title text-white">Скинути пароль</h4>
        </div>
        <div class="card-body">
            <input type="hidden" asp-for="Id"/>
             <form asp-action="ResetPassword" asp-controller="User" asp-area="Admin">
                <div class="mb-2">
                    <label>Нікнейм</label>
                    <input type="text" asp-for="UserName" class="form-control" disabled/>
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="mb-2">
                    <label>Новий пароль</label>
                    <input type="password" asp-for="NewPassword" class="form-control"/>
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>
                <div class="mb-2">
                    <label>Підтвердити пароль</label>
                    <input type="password" asp-for="ConfirmPasswor" class="form-control" />
                    <span asp-validation-for="ConfirmPasswor" class="text-danger"></span>
                </div>
                
                <div class="mb-2">
                    <button type="submit" class="btn btn-primary w-100">Скинути пароль</button>
                </div>
            </form>
        </div>
    </div>
</div>

